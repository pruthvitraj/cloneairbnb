
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>All Listings</title>
    
    <!-- Bootstrap & Custom CSS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/show.css">

    <!-- Icons (Bootstrap) -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="/css/footer.css">
    <style>
    .card {
        transition: 0.3s;
        cursor: pointer;
    }
    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.2);
    }
    .fa-heart {
        text-shadow: 0px 2px 6px rgba(0, 0, 0, 0.6);
    }
    </style>
</head>
<body>

    <%- include("include/nav.ejs") %>
    <%- include("include/flash.ejs") %>
    <div class="container mt-4">
        <h2 class="mb-4">All Listings</h2>
        <button><a  href="/createlist">create list</a></button>
        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-1 g-4">
            <% for (let listing of alllist) { %>
                <div class="col">
                    <a href="/showlist/<%= listing._id %>" class="text-decoration-none">
                    <div class="card border-0 shadow-sm">
                        <div class="position-relative">
                            <!-- Listing Image -->
                            <img src="<%= listing.image.url %>" class="card-img-top rounded-3" style="height: 220px; object-fit: cover;" alt="Listing Image">
                            <!-- Heart Icon -->
                            <!-- <span class="position-absolute top-0 end-0 p-2">
                                <i class="fa-regular fa-heart text-white fs-4"></i>
                            </span> -->
                        </div>

                        <div class="card-body">
                            <!-- Location & Price -->
                            <h5 class="card-title mb-1"><%= listing.title %></h5>
                            <p class="text-muted mb-1"><i class="fa-solid fa-location-dot"></i> <%= listing.country %></p>
                            <!-- <p class="fw-bold">â‚¹<%= listing.price.toLocaleString() %></p> -->
                            
                            <!-- Reviews & Rating -->
                            <div class="d-flex align-items-center">
                                <i class="fa-solid fa-star text-warning"></i>
                                <span class="ms-1 fw-bold"><%= listing.reviews.length > 0 ? (5).toFixed(2) : "New" %></span>
                            </div>
                        </div>
                    </div>
                    </a>
                </div>
            <% } %>
        </div>
    </div>
    <%- include("include/footer.ejs") -%>
</body>
</html>
